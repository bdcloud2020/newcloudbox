[Unit]
Description=Plexdrive 4 Mount
After=network-online.target mongodb.service

[Service]
User={{ user.name }}
Group={{ user.name }}
Type=simple
ExecStartPre=/bin/sleep 10
ExecStart={{ plexdrive_4_mount_start_command }}
ExecStop={{ plexdrive_4_mount_stop_command }}
Restart=always
RestartSec=5

[Install]
WantedBy=default.target
